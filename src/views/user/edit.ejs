<% title = "Editar Perfil" %>

<div class="grid place-items-center py-20 min-h-screen bg-gray-900 text-white">

  <div class="w-[450px] shadow-xl p-8 bg-gray-800 rounded-lg border-t-4 border-blue-500">

    <h1 class="text-3xl font-bold mb-6 text-center">Editar Perfil</h1>

    <!-- Mensajes -->
    <% if (success) { %>
      <div class="bg-green-600 text-white px-4 py-2 mb-4 rounded">
        <%= success %>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="bg-red-600 text-white px-4 py-2 mb-4 rounded">
        <%= error %>
      </div>
    <% } %>

    <form action="/user/profile/update" method="POST" class="flex flex-col gap-4">

      <!-- Nombre -->
      <div>
        <label class="block mb-1 font-semibold">Nombre completo</label>
        <input
          type="text"
          name="name"
          value="<%= user.name %>"
          class="w-full px-3 py-2 rounded bg-gray-700 border border-gray-500"
          required
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block mb-1 font-semibold">Correo electrónico</label>
        <input
          type="email"
          value="<%= user.email %>"
          class="w-full px-3 py-2 rounded bg-gray-700 text-gray-400 border border-gray-500 cursor-not-allowed"
          readonly
        />
      </div>

      <!-- Contraseña -->
      <div>
        <label class="block mb-1 font-semibold">Nueva contraseña (opcional)</label>
        <input
          type="password"
          name="password"
          placeholder="**********"
          class="w-full px-3 py-2 rounded bg-gray-700 border border-gray-500"
        />
        <p class="text-xs mt-1 text-gray-400">
          Debe tener 8+ caracteres, mayúscula, minúscula, número y símbolo.
        </p>
      </div>

      <button
        type="submit"
        class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 rounded-md mt-4"
      >
        Guardar cambios
      </button>
    </form>

    <a href="/user/profile" class="text-blue-400 underline text-sm mt-5 block text-center">
      ← Volver al perfil
    </a>

  </div>

</div>

