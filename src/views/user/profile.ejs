<% title = "Perfil de Usuario" %>

<div class="max-w-xl mx-auto bg-gray-800 p-6 rounded-xl mt-12 text-white shadow-lg border border-gray-700">

    <h1 class="text-3xl font-bold mb-6 text-center">Perfil de Usuario</h1>

    <% if (success) { %>
        <div class="bg-green-600 text-white p-3 rounded mb-4 text-center">
            <%= success %>
        </div>
    <% } %>

    <% if (error) { %>
        <div class="bg-red-600 text-white p-3 rounded mb-4 text-center">
            <%= error %>
        </div>
    <% } %>


    <div class="space-y-3">

        <div class="bg-gray-900 p-4 rounded-lg border border-gray-700">
            <p class="text-sm text-gray-400">Nombre</p>
            <p class="text-lg font-semibold"><%= user.name %></p>
        </div>

        <div class="bg-gray-900 p-4 rounded-lg border border-gray-700">
            <p class="text-sm text-gray-400">Correo</p>
            <p class="text-lg font-semibold"><%= user.email %></p>
        </div>

        <div class="bg-gray-900 p-4 rounded-lg border border-gray-700">
            <p class="text-sm text-gray-400">Rol</p>
            <p class="text-lg font-semibold capitalize"><%= user.role %></p>
        </div>

        <div class="bg-gray-900 p-4 rounded-lg border border-gray-700">
            <p class="text-sm text-gray-400">Fecha de Registro</p>
            <p class="text-lg font-semibold"><%= new Date(user.registered_at).toLocaleDateString() %></p>
        </div>

    </div>

    <div class="mt-8 flex gap-4 justify-between">

        <a href="/user/profile/edit"
           class="flex-1 bg-blue-600 py-3 px-4 rounded-lg text-center hover:bg-blue-700 font-semibold transition">
            Editar Perfil
        </a>

        <a href="/user/profile/delete-confirm"
           class="flex-1 bg-red-600 py-3 px-4 rounded-lg text-center hover:bg-red-700 font-semibold transition">
            Eliminar Cuenta
        </a>

    </div>

</div>
